<!-- Off-canvas menu for mobile, show/hide based on off-canvas menu state. -->
<div class="relative z-40 md:hidden" role="dialog" aria-modal="true">
  <div class="fixed inset-0 flex z-40 bg-gray-600 hidden" data-slideover-target="overlay">
    <div data-slideover-target="menu" class="relative flex-1 flex flex-col max-w-xs w-full pt-5 pb-4 bg-indigo-700 hidden ">
      <div data-action="click->slideover#toggle" class="absolute top-0 right-0 -mr-12 pt-2">
        <button  type="button" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
          <span class="sr-only">Close sidebar</span>
          <!-- Heroicon name: outline/x -->
          <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="mt-5 flex-1 h-0 overflow-y-auto">
        <nav class="px-2 space-y-1">
          <!-- Current: "bg-indigo-800 text-white", Default: "text-indigo-100 hover:bg-indigo-600" -->
          <% @links.each do |link|%>
            <%= link_to link[:path], class: "text-indigo-100 hover:bg-indigo-600 group flex items-center px-2 py-2 text-base font-medium rounded-md py-3" do %>
              <!-- Heroicon name: outline/home -->
              <i class="fa-solid fa-<%= link[:icon] %> mr-4 flex-shrink-0 text-indigo-300 text-xl w-8 text-center"></i>
              <%= link[:text] %>
            <% end %>
          <% end %>
        </nav>
      </div>
    </div>

    <div data-action="click->slideover#toggle" class="flex-shrink-0 w-14" aria-hidden="true">
      <!-- Dummy element to force sidebar to shrink to fit close icon -->
    </div>
  </div>
</div>

<!-- Static sidebar for desktop -->
<div class="hidden md:flex md:w-64 md:flex-col md:fixed md:inset-y-0">
  <!-- Sidebar component, swap this element with another sidebar if you like -->
  <div class="flex flex-col flex-grow pt-5 bg-indigo-700 overflow-y-auto">
    <div class="flex-1 flex flex-col">
      <nav class="flex-1 px-2 pb-4 space-y-1">
        <!-- Current: "bg-indigo-800 text-white", Default: "text-indigo-100 hover:bg-indigo-600" -->
        <% @links.each do |link| %>
          <%= link_to link[:path], class: "text-indigo-100 hover:bg-indigo-600 group flex items-center px-2 py-2 text-sm font-medium rounded-md" do %>
            <!-- Heroicon name: outline/users -->
            <i class="fa-solid fa-<%= link[:icon] %> mr-4 flex-shrink-0 text-indigo-300 text-xl w-8 text-center"></i>
            <%= link[:text] %>
          <% end %>
        <% end %>
      </nav>
    </div>
  </div>
</div>
