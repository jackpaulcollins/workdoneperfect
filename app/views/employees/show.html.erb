<%= content_for :title, "Employees ##{@employee.id}" %>
<%= turbo_stream_from @employee %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Employees", employees_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Employee #<%= @employee.id %>
    </h1>
    <%= link_to t("edit"), edit_employee_path(@employee), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @employee %>
  </div>
</div>
