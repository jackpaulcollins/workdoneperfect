<%= form_with(model: employee) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
  <div class="form-group">
    <%= form.label :employee_template %>
    <%= form.collection_select :employee_template_id, EmployeeTemplate.all, :id, :title, { prompt: true }, { class: "mt-1 block w-full rounded-md border-gray-300 py-2 pl-3 pr-10 text-base focus:border-indigo-500 focus:outline-none focus:ring-indigo-500 sm:text-sm" } %>
  </div>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.datetime_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :final_date %>
    <%= form.datetime_field :final_date, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), employees_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), employee_path(@employee), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
