<%= content_for :title, t("shared.scaffold.edit.title", model: "Employee") %>

<div class="container mx-auto px-4 my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Employees", employees_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= t("shared.scaffold.edit.title", model: "Employee") %>
    </h1>
    <%= button_to t("delete"), @employee, method: :delete, class: "btn btn-white", form: { data: { turbo_confirm: t("are_you_sure") } } %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= form_with(model: @employee) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>
    <div class="form-group w-full flex flex-row space-around">
      <div class="w-1/4">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: "form-control" %>
      </div>
      <div class="w-1/4">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_date %>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>

    <% @employee.template_attributes.each_pair do |attribute, value| %>
      <div>
      <%= form.label attribute.to_s %>
      <input multiple="multiple" class="form-control" type="text" value="<%=value%>" name="employee[template_attributes][<%=attribute%>]"  />
      </div>
    <% end %>

    <div>
      <%= form.button button_text("Update"), class: "btn btn-primary" %>

      <% if form.object.new_record? %>
        <%= link_to t("cancel"), employees_path, class: "btn btn-white" %>
      <% else %>
        <%= link_to t("cancel"), employee_path(@employee), class: "btn btn-white" %>
      <% end %>
    </div>
  </div>
<% end %>

  </div>
</div>
