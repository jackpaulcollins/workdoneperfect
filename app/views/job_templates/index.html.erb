<%= content_for :title, "Job Types" %>
<%= turbo_stream_from :job_templates %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Job Types</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
    <%= sortable @job_templates, :job_count, "Job Count", class: "text-gray-700 mr-1" %>
    <%= sortable @job_templates, :title, "Title", class: "text-gray-700 mr-1" %>
  </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Job Type"), new_job_template_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("job_templates" if first_page?) do %>
    <%= render partial: "job_templates/index", collection: @job_templates, as: :job_template, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first job Template</p>
        <%= link_to t("shared.scaffold.new.title", model: "Job Type"), new_job_template_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
