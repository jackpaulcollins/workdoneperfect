<%= content_for :title, "Job Type ##{@job_template.id}" %>
<%= turbo_stream_from @job_template %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Job Types", job_templates_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Job Type #<%= @job_template.id %>
    </h1>
    <%= link_to t("edit"), edit_job_template_path(@job_template), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @job_template %>
  </div>
</div>
