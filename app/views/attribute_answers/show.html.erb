<%= content_for :title, "Attribute Answers ##{@attribute_answer.id}" %>
<%= turbo_stream_from @attribute_answer %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Attribute Answers", attribute_answers_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Attribute Answer #<%= @attribute_answer.id %>
    </h1>
    <%= link_to t("edit"), edit_attribute_answer_path(@attribute_answer), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @attribute_answer %>
  </div>
</div>
