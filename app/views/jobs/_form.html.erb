<%= form_with(model: job) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :customer_id %>
    <%= form.collection_select :customer_id, Customer.all, :id, :name_with_email, { prompt: true }, { class: "form-control" } %>
  </div>

  <div class="form-group">
    <%= fields_for job.employees do |e| %>
      <%= collection_select(:employee_ids, :id, Employee.all, :id, :first_name, {}, { :multiple => true })%>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.datetime_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :estimated_hours %>
    <%= form.number_field :estimated_hours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :compeleted_hours %>
    <%= form.number_field :compeleted_hours, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :revenue %>
    <%= form.number_field :revenue, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), jobs_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), job_path(@job), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
