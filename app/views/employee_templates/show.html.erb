<%= content_for :title, "Employee Template ##{@employee_template.id}" %>
<%= turbo_stream_from @employee_template %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Employee Templates", employee_templates_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Employee Template #<%= @employee_template.id %>
    </h1>
    <%= link_to t("edit"), edit_employee_template_path(@employee_template), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @employee_template %>
  </div>
</div>
