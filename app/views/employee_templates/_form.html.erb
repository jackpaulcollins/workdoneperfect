<%= form_with(model: employee_template) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :account_id %>
    <%= form.text_field :account_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), employee_templates_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), employee_template_path(@employee_template), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
