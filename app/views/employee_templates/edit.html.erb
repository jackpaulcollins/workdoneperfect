<%= content_for :title, t("shared.scaffold.edit.title", model: "Employee Template") %>

<div class="container mx-auto px-4 my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Employee Templates", employee_templates_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= t("shared.scaffold.edit.title", model: "Employee Template") %>
    </h1>
    <%= button_to t("delete"), @employee_template, method: :delete, class: "btn btn-white", form: { data: { turbo_confirm: t("are_you_sure") } } %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= form_with(model: @employee_template) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group w-1/2">
    <%= form.label :title %>
    <%= form.text_field :title, required: :true, class: "form-control" %>
  </div>

  <div class="form-group w-1/6">
    <%= form.label :custom_attributes %>
    <div data-controller="employee-template" data-employee-template-template="<%= @employee_template.template_attributes %>">
      <div data-employee-template-target="attributes" id="template-attributes"></div>
      <%= link_to "+", "append_attribute", type: :button, method: :post, class: "bg-blue-50 px-3 py-2 rounded inline-flex items-center justify-center text-blue-600" %>
    </div>
  </div>

    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), employee_templates_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), employee_template_path(@employee_template), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
  </div>
</div>
