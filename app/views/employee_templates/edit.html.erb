<%= content_for :title, t("shared.scaffold.edit.title", model: "Employee Template") %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Employee Templates", employee_templates_path, class: "text-black" %>
      <span class="mx-2 font-light text-gray-400">\</span>
      <%= t("shared.scaffold.edit.title", model: "Employee Template") %>
    </h1>
    <%= button_to t("delete"), @employee_template, method: :delete, class: "btn btn-white", form: { data: { turbo_confirm: t("are_you_sure") } } %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render "form", employee_template: @employee_template %>
  </div>
</div>
