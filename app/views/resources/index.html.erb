<%= content_for :title, "Resources" %>
<%= turbo_stream_from :resources %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <div>
      <h1 class="h3">Resources</h1>

      <div class="text-sm font-medium">
        <span class="text-gray-500">Sort by:</span>
        <%= sortable @resources, :name, "Name", class: "text-gray-700 mr-1" %>
        <%= sortable @resources, :description, "Description", class: "text-gray-700 mr-1" %>
        <%= sortable @resources, :account_id, "Account", class: "text-gray-700 mr-1" %>
        <%= sortable @resources, :count, "Count", class: "text-gray-700 mr-1" %>
      </div>
    </div>

    <%= link_to t("shared.scaffold.new.title", model: "Resource"), new_resource_path, class: "btn btn-white" %>
  </div>

  <%= tag.div id: ("resources" if first_page?), class: "bg-white rounded-md shadow p-6 space-y-8" do %>
    <%= render partial: "resources/index", collection: @resources, as: :resource, cached: true %>

    <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
      <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
      <div class="flex-1 text-center">
        <p class="mb-4 h3">Create your first Resource</p>
        <%= link_to t("shared.scaffold.new.title", model: "Resource"), new_resource_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>
