<div class="container p-4 mx-auto">
<h1><%= t("dashboard.show.title") %></h1>
<%= month_calendar(events: @jobs) do |date, jobs| %>
  <%= date %>

  <% jobs.each do |job| %>
    <div>
      <%= link_to job, class: "block hover:bg-gray-50" do %>
        <%= job.customer.name_or_email %>
      <% end %>
    </div>
  <% end %>
<% end %>
</div>
