<%= form_with(model: employee_attribute) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :employee_template_id %>
    <%= form.text_field :employee_template_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), employee_attributes_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), employee_attribute_path(@employee_attribute), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>
